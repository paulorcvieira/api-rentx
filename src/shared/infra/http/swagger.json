{
  "openapi": "3.0.0",
  "info": {
    "title": "Rentx Documentation",
    "description": "This is an API Rent",
    "version": "1.0.0",
    "contact":{
      "email": "paullocostta86@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category and save on database",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category name sample",
                  "description":"Category description sample"
                }
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          },
          "400":{
            "description":"Bad Request"
          }
        }
      },
      "get":{
        "tags": ["Categories"],
        "summary": "List all categories",
        "description":"List all categories",
        "responses": {
          "200":{
            "description": "Success",
            "content":{
              "application/json":{
                "schema": {
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties":{
                      "name": {
                        "type":"string"
                      },
                      "description": {
                        "type": "string"
                      }

                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category"],
        "summary": "Upload a new category",
        "description": "Upload a new category",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a specification",
        "description": "Create a new specification and save on database",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Specifications"
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Success"
          },
          "201": {
            "description": "Created"
          },
          "400":{
            "description":"Bad Request"
          },
          "500": {
            "description": "Specification already exists"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
